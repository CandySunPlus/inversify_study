{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "ES2017",
      "ES2018"
    ],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "importHelpers": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "strict": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
